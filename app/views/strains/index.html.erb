<p id="notice"><%= notice %></p>

<h1>Cepas</h1>

<table class="table">
  <thead>

    <tr>
      <th>Nombre</th>
      <% if current_user.can_edit  %>
        <th colspan="3"></th>
      <% else %>  
        <th colspan="1"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @strains.each do |strain| %>
      <tr>
        <td><%= strain.name %></td>
        <td><%= link_to 'Detalles', strain %></td>
        <% if current_user.can_edit %>
          <td><%= link_to 'Editar', edit_strain_path(strain) %></td>
          <td><%= link_to 'Destruir', strain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar Cepa', new_strain_path %>
