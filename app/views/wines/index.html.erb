<p id="notice"><%= notice %></p>

<h1>Vinos</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Ensamblaje</th>
      <th>Calificaci√≥n promedio</th>
      <th>Calificaciones</th>
      <% if current_user.can_edit  %>
        <th colspan="3"></th>
      <% else %>  
        <th colspan="1"></th>
      <% end %>
      
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.name %></td>
        <td>
          <% wine.assemblies.each do |asmb| %>
            <%= asmb.strain_name %> 
            <%= asmb.strain_percent %><br>
          <% end %>
        </td>
        <td><%= wine.avarage_grade %></td>
        <td>
          <% wine.grades.each do |grd| %>
            <%= grd.oenologist_name %>: 
            <%= grd.grade %><br>
          <% end %>
        </td>

        <td><%= link_to 'Detalles', wine %></td>
        <% if current_user.can_edit %>
          <td><%= link_to 'Editar', edit_wine_path(wine) %></td>
          <td><%= link_to 'Destruir', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>  
        <% end %>      
      </tr>
    <% end %>
  </tbody>
</table>

<br>

